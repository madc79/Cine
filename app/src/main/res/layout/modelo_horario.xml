<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/horaInicioText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:text="Hora de inicio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/horaFinText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/seleccionarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="seleccionar"
        app:layout_constraintBottom_toBottomOf="@+id/horaFinText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/horaFinText"
        app:layout_constraintTop_toTopOf="@+id/horaFinText" />

    <TextView
        android:id="@+id/horaFinText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:text="Hora de fin"
        app:layout_constraintBottom_toBottomOf="@+id/horaInicioText"
        app:layout_constraintEnd_toStartOf="@+id/seleccionarButton"
        app:layout_constraintStart_toEndOf="@+id/horaInicioText"
        app:layout_constraintTop_toTopOf="@+id/horaInicioText" />
</androidx.constraintlayout.widget.ConstraintLayout>